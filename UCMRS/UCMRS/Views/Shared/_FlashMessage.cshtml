@if (Session["success_div"] != null && Session["success_div"].ToString() == "true")
{
    Session["success_div"] = null;
    <text>
        <script>
        swal.setDefaults({
            confirmButtonColor: '#9CD159',
            showLoaderOnConfirm: true,
            allowOutsideClick: true
        });
        swal({
            title: 'Success!',
            text: '@Session["success_msg"].ToString()',
            html: '@Session["success_msg"].ToString()',
            type: 'success'
        });
        </script>
    </text>
    Session["success_msg"] = null;
}
