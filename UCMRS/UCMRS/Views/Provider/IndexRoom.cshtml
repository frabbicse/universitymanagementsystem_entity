@model IEnumerable<UCMRS.Models.DB.Room>

@{
    ViewBag.Title = "IndexRoom";
}

<div class="card text-center">
    <h3 class="card-header">Rooms</h3>
    <div class="card-body">
        <div class="offset-4 col-md-4">
            <table class="table table-striped table-bordered">
                @{
                    var sl = 0;
                    <tr>
                        <th style="text-align: center">SL#</th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="text-align: center">
                            @Html.DisplayNameFor(model => model.RoomNo)
                        </th>
                        @*<th></th>*@
                    </tr>

                    foreach (var item in Model)
                    {
                        sl = sl + 1;
                        <tr>
                            <td style="text-align: right; width: 2%">@sl</td>
                            <td style="text-align: left; width: 15%">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td style="text-align: right; width: 15%">
                                @Html.DisplayFor(modelItem => item.RoomNo)
                            </td>
                            @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                    </td>*@
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>

