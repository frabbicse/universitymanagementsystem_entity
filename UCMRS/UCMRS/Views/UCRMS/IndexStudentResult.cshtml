@model UCMRS.Models.View.VM_StudentResult

@{
    ViewBag.Title = "IndexStudentResult";
}

<div class="offset-1"> @Html.ActionLink(" ", "AddStudentResult", "UCRMS", new { @class = "fa fa-plus-square-o fa-2x"})</div>

<div class="card text-center">
    <h3 class="card-header">Student Result</h3>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th style="text-align: center">SL#</th>
                <th style="text-align: center">@Html.DisplayNameFor(model => model.StudentRegNo)</th>
                <th style="text-align: center">@Html.DisplayNameFor(model => model.StudentName)</th>
                <th style="text-align: center">@Html.DisplayNameFor(model => model.CourseName)</th>
                <th style="text-align: center">@Html.DisplayNameFor(model => model.GradeName)</th>
                <th style="text-align: center">Action</th>
            </tr>

            @{
                var sl = 0;
                foreach (var item in Model.Results)
                {
                    sl = sl + 1;
                    <tr>
                        <td style="text-align: right;width: 2%">@sl</td>
                        <td style="text-align: left;width: 20%">@Html.DisplayFor(modelItem => item.StudentRegNo)</td>
                        <td style="text-align: left;width: 20%">@Html.DisplayFor(modelItem => item.StudentName)</td>
                        <td style="text-align: left;width: 20%">@Html.DisplayFor(modelItem => item.CourseName)</td>
                        <td style="text-align: left;width: 20%">@Html.DisplayFor(modelItem => item.GradeName)</td>
                        <td style="text-align: left;width: 18%">
                            @Html.ActionLink(" ", "EditStudentResult", "UCRMS", new { id = item.Id }, new { @class = "btn btn-success btn-xs fa fa-pencil-square-o" })&nbsp;
                            @*@Html.ActionLink(" ", "Details", "UCRMS", new { id = item.Id }, new { @class = "btn btn-success  btn-xs fa fa-external-link" })&nbsp;*@
                            @Html.ActionLink(" ", "DeleteStudentResult", "UCRMS", new { id = item.Id }, new { @class = "btn btn-danger btn-xs fa fa-trash-o" })
                        </td>
                    </tr>
                }
            }
        </table>

    </div>
</div>

