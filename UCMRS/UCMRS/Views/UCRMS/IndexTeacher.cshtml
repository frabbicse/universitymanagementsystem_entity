@model UCMRS.Models.View.VM_Teacher

@{
    ViewBag.Title = "IndexTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="offset-1">
    @Html.ActionLink(" ", "AddTeacherInfo", "UCRMS", new  { @class = "fa fa-plus-square-o fa-2x"})
</div>

<div class="card text-center">
    <h3 class="card-header">Teachers </h3>
    <div class="card-body">
        <table class="table table-bordered table-striped table-responsive-sm">
            <tr>
                <th>SL</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Credit To Be Taken</th>
                <th>Available Credit</th>
                <th>Action</th>
            </tr>
            @{
                int a = 0;
                foreach (var item in Model.Teachers)
                {
                    a = a + 1;
                    <tr>
                        <td style="text-align: right; width: 02%">@a</td>
                        <td style="text-align: left; width: 10%">@item.Name</td>
                        <td style="text-align: left; width: 25%">
                            Address: @item.Address <br />
                            Email: @item.Email <br />
                            Phone: @item.ContactNo
                        </td>
                        <td style="text-align: left; width: 15%">@item.DepartmentName</td>
                        <td style="text-align: left; width: 10%">@item.Designation</td>
                        <td style="text-align: left; width: 5%">@item.CreditTaken</td>
                        <td style="text-align: left; width: 5%">@item.RemainingCredit</td>
                        <td style="text-align: left; width: 10%">
                            @Html.ActionLink(" ", "EditTeacherInfo", "UCRMS", new { id = item.TeacherId }, new { @class = "btn btn-success btn-xs fa fa-pencil-square-o" })&nbsp;
                            @Html.ActionLink(" ", "DeleteTeacherInfo", "UCRMS", new { id = item.TeacherId }, new { @class = "btn btn-danger btn-xs fa fa-trash-o" })&nbsp;
                            @Html.ActionLink(" ", "DetailsTeacher", "UCRMS", new { id = item.TeacherId }, new { @class = "btn btn-success  btn-xs fa fa-external-link-square" })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
</div>